<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the Pro account for $10 / month and <br/>
          get access to the community and contact information!</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for free and get basic <br /> access to the community.</p>
        <% end %>
      </div>
      
      <div class="well">
        <h3 class="text-center well-title">Sign up</h3>
        <% if params[:plan] == '2' %>
            <%= render "pro_form" %>
        <% else %>
            <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>